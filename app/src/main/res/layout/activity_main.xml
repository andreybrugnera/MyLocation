<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ifsp.mylocation.MainActivity">

    <Button
        android:id="@+id/bt_load_last_location"
        android:text="@string/last_location"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showLastLocation"/>

    <ToggleButton
        android:id="@+id/tbt_update_location"
        android:textOff="@string/start_location_updates"
        android:textOn="@string/stop_location_updates"
        android:checked="false"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_show_maps"
        android:text="@string/show_maps"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showGoogleMaps"/>

</LinearLayout>
